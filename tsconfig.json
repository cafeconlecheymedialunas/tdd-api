{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./", // Add this line
    "paths": {
      "domain/*": [
        "./src/domain/*"
      ], // Add './' at the beginning
      "application/*": [
        "./src/application/*"
      ], // Add './' at the beginning
      "infrastructure/*": [
        "./src/infrastructure/*"
      ], // Add './' at the beginning
      "#root/*": [
        "./src/*"
      ] // Add './' at the beginning
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}