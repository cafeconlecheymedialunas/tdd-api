{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "commonjs",                               
    "rootDir": "./",                                 
    "outDir": "./public",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                               
  } ,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
